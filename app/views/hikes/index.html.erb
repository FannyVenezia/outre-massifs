<div class="white-background">
  <div class="quipage">
     <div class="small-logo">
      <%= link_to root_path do %>
        <%= image_tag "logo.png" %>
      <% end %>
    </div>

    <div class="menu-navbar">
      <div style="padding: 26px; margin-top: 24px">
        <%= link_to "Qui suis-je ?", qui_path %>
      </div>
      <div style="padding: 26px; margin-top: 24px">
        <%= link_to "Randonnées", hikes_path, style: "color: #1f547a" %>
      </div>
      <div  style="padding: 26px; margin-top: 24px">
        <%= link_to "Animation nature", animation_path %>
      </div>
      <div  style="padding: 26px; margin-top: 24px">
        <%= link_to "Photos", photos_path %>
      </div>
      <div style="padding: 26px; margin-top: 24px">
        <%= link_to "Tarifs et conditions", tarifs_path %>
      </div>
      <div  style="padding: 26px; margin-top: 24px">
        <%= link_to "Contactez-moi", new_message_path %>
      </div>
    </div>
