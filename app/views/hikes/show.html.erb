<div class="blue-background">
  <section class="section-1">
    <header>
      <div>
        <div class="quipage">
          <div class="small-logo">
            <%= link_to root_path do %>
              <%= image_tag "logo.png" %>
            <% end %>
          </div>

          <div class="menu-navbar">
            <div class="centered-nev-item">
              <%= link_to "Qui suis-je ?", qui_path %>
            </div>
            <div class="centered-nev-item">
              <%= link_to "RandonnÃ©es", hikes_path %>
