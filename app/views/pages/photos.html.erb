<section class="section-1">
  <header>
    <div>
      <div class="quipage">
        <div class="small-logo">
          <%= link_to root_path do %>
            <%= image_tag "logo.png" %>
          <% end %>
        </div>

        <div class="menu-navbar">
          <div class="centered-nev-item">
            <%= link_to "Qui suis-je ?", qui_path %>
          </div>
          <div class="centered-nev-item">
            <%= link_to "Randonnées", hikes_path %>
          </div>
          <div class="centered-nev-item">
            <%= link_to "Animation nature", animation_path %>
          </div>
          <div class="centered-nev-item">
            <%= link_to "Photos", photos_path, style: "color: #1f547a" %>
          </div>
          <div class="centered-nev-item">
            <%= link_to "Tarifs et conditions", tarifs_path %>
          </div>
          <div class="centered-nev-item">
            <%= link_to "Contactez-moi", new_message_path %>
          </div>
        </div>
      </div>
    </div>
  </header>
</section>

<div>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/144352/pexels-photo-144352.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1);">
    <div class="container" style="margin-bottom: 62px; color: white">
      <h2><strong>Pour un aperçu de ce qui vous attend...</strong></h2>
      <%= link_to "Réserver", hikes_path, type: "button", class: "btn btn-flat" %>
    </div>
  </div>
</div>

<div>
  <div class="grid-phot" style="margin-top: 20px; margin-bottom: 20px">
    <div data-aos="fade-up-right" data-aos-duration="3000">
      <%= image_tag "https://images.pexels.com/photos/789555/pexels-photo-789555.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" %>
    </div>
    <div  data-aos="fade-up" data-aos-duration="2000">
      <%= image_tag "https://images.pexels.com/photos/1480806/pexels-photo-1480806.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" %>
    </div>
    <div data-aos="fade-up-left" data-aos-duration="3000">
      <%= image_tag "https://images.pexels.com/photos/1552932/pexels-photo-1552932.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" %>
    </div>
    <div data-aos="fade-up-right" data-aos-duration="3000">
      <%= image_tag "https://images.pexels.com/photos/2437293/pexels-photo-2437293.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" %>
    </div>
    <div  data-aos="fade-up" data-aos-duration="2000">
      <%= image_tag "https://images.pexels.com/photos/1480806/pexels-photo-1480806.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" %>
    </div>
    <div data-aos="fade-up-left" data-aos-duration="3000">
      <%= image_tag "https://images.pexels.com/photos/1552932/pexels-photo-1552932.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" %>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<script>
  $(document).ready(function(){
    $(window).on('scroll', function(){
      if ($(window).scrollTop()) {
                $("header").addClass('no-background');
                $(".centered-nev-item").addClass('killmar');
      }else{
        $("header").removeClass('no-background');
        $(".centered-nev-item").removeClass('killmar');
      }
    });
  });
</script>
