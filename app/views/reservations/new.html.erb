<section class="section-1">
  <header>
    <div>
      <div class="quipage">
        <div class="small-logo">
          <%= link_to root_path do %>
            <%= image_tag "logo.png" %>
          <% end %>
        </div>

        <div class="menu-navbar">
          <div class="centered-nev-item">
            <%= link_to "Qui suis-je ?", qui_path %>
          </div>
          <div class="centered-nev-item">
            <%= link_to "Randonnées", hikes_path %>
          </div>
          <div class="centered-nev-item">
            <%= link_to "Animation nature", animation_path %>
          </div>
          <div class="centered-nev-item">
            <%= link_to "Photos", photos_path %>
          </div>
          <div class="centered-nev-item">
            <%= link_to "Tarifs et conditions", tarifs_path %>
          </div>
          <div class="centered-nev-item">
            <%= link_to "Contactez-moi", new_message_path %>
          </div>
        </div>
      </div>
    </div>
  </header>
</section>

<div class="blue-box">
  <div class="form">
    <p class="text-justify">Réserver une rando maintenant !</p>

    <%= simple_form_for @reservation do |f| %>
      <div>
        <div>
          <%= f.input :name, prompt: "Nom de la randonnée", input_html: {data: { controller: "tom-select"}} %>
        </div>
        <div>
          <%= f.input :attendant, placeholder: "Nombre de personnes", label: false %>
        </div>
      </div>
      <%= f.input :text, placeholder: "Commentaire", label: false %>
      <%= f.submit "Réserver !" %>
    <% end %>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<script>
  $(document).ready(function(){
    $(window).on('scroll', function(){
      if ($(window).scrollTop()) {
                $("header").addClass('no-background');
                $(".centered-nev-item").addClass('killmar');
      }else{
        $("header").removeClass('no-background');
        $(".centered-nev-item").removeClass('killmar');
      }
    });
  });
</script>
